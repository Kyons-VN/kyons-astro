---
import './style.scss';
export interface Props {
  l: any;
}

const { l } = Astro.props;
const APP_URL = process.env.APP_URL;
---

<div class='schools'>
  <div id='schools' class='absolute top-[-82px]'></div>
  <div class='flex flex-col w-full max-w-[1122px] gap-6 lg:gap-11 items-center'>
    <div class='lg:grid lg:grid-cols-2 flex flex-col gap-6'>
      <div
        class='flex flex-col lg:px-12 lg:py-6 gap-6 w-full lg:max-w-[550px] items-center lg:items-start justify-center lg:text-left text-center'
      >
        <div class='flex flex-col gap-2 items-center lg:items-start'>
          <strong class='title'>{l.schools.forSchools}</strong>
          <h3 class='text-2xl'>{l.schools.usefulTool}</h3>
        </div>
        <a href='#contact' class='btn green w-full'>{l.btn.trial}</a>
      </div>
    </div>
    <div class='grid sm:grid-cols-2 lg:grid-cols-4 gap-5 text-center max-w-[350px] sm:max-w-none'>
      <div class='flex flex-col items-center pt-12 pb-9 bg-white rounded-lg gap-9 px-6 py-12'>
        <div class='w-16 h-16 bg-emerald-0 shadow-green1 flex items-center justify-center rounded-full'>
          <img src='/images/AIPractice.svg' alt={l.schools.have1} width='42px' height='42px' />
        </div>
        <div class='flex flex-col gap-2'>
          <h5 class='text-base font-bold'>{l.schools.have1}</h5>
          <p>{l.schools.have1Desc}</p>
        </div>
      </div>
      <div class='flex flex-col items-center pt-12 pb-9 bg-white rounded-lg gap-9 px-6 py-12'>
        <div class='w-16 h-16 bg-emerald-0 shadow-green1 flex items-center justify-center rounded-full'>
          <img src='/images/AIQuestions.svg' alt={l.schools.have1} width='42px' height='42px' />
        </div>
        <div class='flex flex-col gap-2'>
          <h5 class='leading-8'>{l.schools.have2}</h5>
          <p>{l.schools.have2Desc}</p>
        </div>
      </div>
      <div class='flex flex-col items-center pt-12 pb-9 bg-white rounded-lg gap-9 px-6 py-12'>
        <div class='w-16 h-16 bg-emerald-0 shadow-green1 flex items-center justify-center rounded-full'>
          <img src='/images/HomeworkMana.svg' alt={l.schools.have1} width='42px' height='42px' />
        </div>
        <div class='flex flex-col gap-2'>
          <h5 class='leading-8'>{l.schools.have3}</h5>
          <p>{l.schools.have3Desc}</p>
        </div>
      </div>
      <div class='flex flex-col items-center pt-12 pb-9 bg-white rounded-lg gap-9 px-6 py-12'>
        <div class='w-16 h-16 bg-emerald-0 shadow-green1 flex items-center justify-center rounded-full'>
          <img src='/images/AssessMana.svg' alt={l.schools.have1} width='42px' height='42px' />
        </div>
        <div class='flex flex-col gap-2'>
          <h5 class='leading-8'>{l.schools.have4}</h5>
          <p>{l.schools.have4Desc}</p>
        </div>
      </div>
    </div>
  </div>
</div>
