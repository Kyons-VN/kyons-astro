---
import './schools.scss';
export interface Props {
  l: any;
}

const { l } = Astro.props;
const APP_URL = process.env.APP_URL;
---

<div id='schools'>
  <div class='flex flex-col px-12 py-6 gap-6 w-full md:w-1/2 max-w-[550px] items-start text-left'>
    <div class='flex flex-col gap-2 items-start'>
      <strong class='text-lightBlue-1'>{l.schools.forSchools}</strong>
      <h3>{l.schools.usefulTool}</h3>
    </div>
    <p>{l.schools.kyonsSchool}</p>
    <a href='#contact' class='btn large'>{l.btn.trial}</a>
  </div>
  <h5 class='w-full'>{l.schools.whatKyonsHave}</h5>
  <div class='grid grid-cols-2 lg:grid-cols-4 gap-5 text-white text-left'>
    <div class='flex flex-col items-center pt-12 pb-9 bg-lightBlue-1 rounded-lg gap-9 px-6 py-12'>
      <img src='/images/AIPractice.svg' alt='' width='108px' height='108px' />
      <div class='flex flex-col gap-2'>
        <h5 class='leading-8'>{l.schools.have1}</h5>
        <p>{l.schools.have1Desc}</p>
      </div>
    </div>
    <div class='flex flex-col items-center pt-12 pb-9 bg-blueGrey-800 rounded-lg gap-9 px-6 py-12'>
      <img src='/images/AIQuestions.svg' alt='' width='108px' height='108px' />
      <div class='flex flex-col gap-2'>
        <h5 class='leading-8'>{l.schools.have2}</h5>
        <p>{l.schools.have2Desc}</p>
      </div>
    </div>
    <div class='flex flex-col items-center pt-12 pb-9 bg-secondaryBlue rounded-lg gap-9 px-6 py-12'>
      <img src='/images/HomeworkMana.svg' alt='' width='108px' height='108px' />
      <div class='flex flex-col gap-2'>
        <h5 class='leading-8'>{l.schools.have3}</h5>
        <p>{l.schools.have3Desc}</p>
      </div>
    </div>
    <div class='flex flex-col items-center pt-12 pb-9 bg-lightBlue-1 rounded-lg gap-9 px-6 py-12'>
      <img src='/images/AssessMana.svg' alt='' width='108px' height='108px' />
      <div class='flex flex-col gap-2'>
        <h5 class='leading-8'>{l.schools.have4}</h5>
        <p>{l.schools.have4Desc}</p>
      </div>
    </div>
  </div>
</div>
