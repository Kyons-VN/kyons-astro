---
import './style.scss';
export interface Props {
  l: any;
}

const { l } = Astro.props;
---

<div class='home'>
  <div id='home' class='absolute top-[-82px]'></div>
  <div class='h-10'></div>
  <div class='w-full max-w-[782px] flex flex-col gap-6 items-center'>
    <h1 class='text-2xl lg:text-4xl'>{l.home.whyNotSmarter}</h1>
    <p>{l.home.kyons}</p>
    <div class='flex flex-col lg:flex-row gap-2 lg:gap-6'>
      <a href='#students' id='student-btn' class='btn h-12 lg:h-10 w-[280px]'>{l.btn.forStudents}</a>
      <a href='#schools' id='school-btn' class='btn h-12 lg:h-10 green w-[280px]'>{l.btn.forSchools}</a>
    </div>
  </div>
  <div class='w-full max-w-[620px] relative min-h-[300px] max-h-[50vh]'>
    <a href='#schools'
      ><img id='school-image' src='/images/school.png' class='absolute lg:right-0 top-0 transition-all' /></a
    >
    <a href='#students'>
      <img
        id='student-image'
        src='/images/student.png'
        class='absolute right-0 lg:left-0 top-16 lg:top-14 transition-all max-h-[50vw]'
      />
    </a>
  </div>
</div>

<script>
  const studentBtn = document.getElementById('student-btn')!;
  const studentImg = document.getElementById('student-image')!;
  const schoolBtn = document.getElementById('school-btn')!;
  const schoolImg = document.getElementById('school-image')!;

  // studentBtn events
  // studentBtn.addEventListener('click', () => handleClick(2));
  studentBtn.addEventListener('mouseover', () => {
    studentImg.classList.remove('imgHide');
    studentImg.classList.add('imgShow');
    schoolImg.classList.remove('imgShow');
    schoolImg.classList.add('imgHide');
  });
  studentBtn.addEventListener('mouseout', () => {
    studentImg.classList.remove('imgHide');
    studentImg.classList.remove('imgShow');
    schoolImg.classList.remove('imgShow');
    schoolImg.classList.remove('imgHide');
  });
  studentImg.addEventListener('mouseover', () => {
    studentImg.classList.remove('imgHide');
    studentImg.classList.add('imgShow');
    schoolImg.classList.remove('imgShow');
    schoolImg.classList.add('imgHide');
  });
  studentImg.addEventListener('mouseout', () => {
    studentImg.classList.remove('imgHide');
    studentImg.classList.remove('imgShow');
    schoolImg.classList.remove('imgShow');
    schoolImg.classList.remove('imgHide');
  });

  // schoolBtn events
  // schoolBtn.addEventListener('click', () => handleClick(3));
  schoolBtn.addEventListener('mouseover', () => {
    studentImg.classList.remove('imgShow');
    studentImg.classList.add('imgHide');
    schoolImg.classList.remove('imgHide');
    schoolImg.classList.add('imgShow');
  });
  schoolBtn.addEventListener('mouseout', () => {
    studentImg.classList.remove('imgHide');
    studentImg.classList.remove('imgShow');
    schoolImg.classList.remove('imgShow');
    schoolImg.classList.remove('imgHide');
  });
  schoolImg.addEventListener('mouseover', () => {
    studentImg.classList.remove('imgShow');
    studentImg.classList.add('imgHide');
    schoolImg.classList.remove('imgHide');
    schoolImg.classList.add('imgShow');
  });
  schoolImg.addEventListener('mouseout', () => {
    studentImg.classList.remove('imgHide');
    studentImg.classList.remove('imgShow');
    schoolImg.classList.remove('imgShow');
    schoolImg.classList.remove('imgHide');
  });
</script>
