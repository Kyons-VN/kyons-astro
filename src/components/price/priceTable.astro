---
export interface Props {
  l: any;
  showAll: boolean;
}

const { l, showAll } = Astro.props;
---

<div
  class='flex flex-col rounded-lg p-4 bg-white hover:shadow-orange shadow-2 min-h-[560px] max-w-[400px] justify-start'
>
  <div class='flex flex-col gap-8'>
    <div class='flex gap-1 items-center justify-center'>
      <img src='/images/free-package.svg' alt='' />
      <h6 class='text-lg'>{l.price.package1}</h6>
    </div>
    <div class='flex gap-2.5 justify-center items-center'>
      <div class='flex flex-col justify-end'>
        <b class='text-blueGrey-400 text-3xl text-right'>69K</b>
        <b class='px-2.5 py-1 w-[96px] text-sm bg-emerald-3 text-darkEmerald rounded-3xl text-center'
          >{`${l.lang == 'VI' ? l.price.discount + ' 60%' : '60% ' + l.price.discount}`}</b
        >
      </div>
      <span class='text-7xl font-semibold'>19K</span>
    </div>
    <i class='text-center'>1{l.price.monthAccess}</i>
    <div class='flex flex-col gap-4'>
      <a href='https://student.kyons.vn' target='_blank' class='btn orange'>{l.btn.preorder}</a>
      <p set:html={l.price.package1Include} />
      <ul class='star'>
        <li set:html={l.price.package11} />
      </ul>
    </div>
  </div>
</div>
<div
  class='flex flex-col rounded-lg p-4 gap-4 bg-white hover:shadow-orange shadow-2 min-h-[682px] max-w-[450px] justify-start items-center border-orange border-8'
