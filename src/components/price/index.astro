---
import PriceTable from './priceTable.astro';
import './style.scss';
export interface Props {
  l: any;
}

const { l } = Astro.props;
---

<div class='price'>
  <div id='price' class='absolute top-[-82px]'></div>
  <div class='flex flex-col gap-6 items-center px-4 py-6'>
    <div class='flex flex-col gap-2 text-white items-center'>
      <div class='flex gap-2'>
        <div class='px-3 py-1 rounded-full bg-lightBlue-1 font-bold'>{l.price.priceTable}</div>
        <div class='px-3 py-1 rounded-full bg-darkEmerald font-bold'>{l.price.promotion}</div>
      </div>
      <h3 class='text-center'>{l.price.title}</h3>
      <p>{l.price.select}</p>
    </div>
    <div class='flex flex-col sm:grid grid-cols-3 gap-3 sm:gap-6 items-stretch w-full'>
      <PriceTable l={l} />
      <a
        href={`${l.lang == 'VI' ? '' : '/en'}/price`}
        class='flex items-center justify-center gap-4 px-[16px] py-[6px] cursor-pointer font-[600] text-center h-10 rounded bg-white border border-orange text-orange shadow-none sm:hidden'
        >{l.price.detailsAndCompare} <i class='icon-ArrowRight'></i></a
      >
    </div>
  </div>
</div>

<script></script>
