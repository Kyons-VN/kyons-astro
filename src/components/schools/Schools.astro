---
import './schools.scss';
export interface Props {
  l: any;
}

const { l } = Astro.props;
const APP_URL = process.env.APP_URL;
---

<div id="schools">
  <div class="flex flex-col gap-2 w-full">
    <h5></h5>
  </div>
  <div class="grid grid-cols-3 w-full max-w-[1122px] gap-10">
    <div class='flex flex-col gap-8 items-center bg-white rounded-lg shadow-4 py-12 px-8'>
      <img src='/images/feature-1.svg' width='108px' height='108px'/>
      <div class='flex flex-col gap-2'>
        <h5 class='leading-8'>{l.features.detectKnowledgeHoles}</h5>
        <p>{l.features.detectKnowledgeHolesDesc}</p>
      </div>
    </div>
    <div class='flex flex-col gap-8 items-center bg-white rounded-lg shadow-4 py-12 px-8'>
      <img src='/images/feature-2.svg' width='108px' height='108px'/>
      <div class='flex flex-col gap-2'>
        <h5 class='leading-8'>{l.features.learningPath}</h5>
        <p>{l.features.learningPathDesc}</p>
      </div>
    </div>
    <div class='flex flex-col gap-8 items-center bg-white rounded-lg shadow-4 py-12 px-8'>
      <img src='/images/feature-3.svg' width='108px' height='108px'/>
      <div class='flex flex-col gap-2'>
        <h5 class='leading-8'>{l.features.practiceWith}</h5>
        <p>{l.features.practiceWithDesc}</p>
      </div>
    </div>
  </div>
</div>