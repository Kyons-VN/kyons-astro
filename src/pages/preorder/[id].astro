---
import Footer from '@components/Footer.astro';
import Menu from '@components/menu/Menu';
import Preorder1 from '@components/preorder/index.astro';
import l from '@data/vi.json';
import Layout from '@layouts/Layout.astro';
import '@styles/global.scss';
export function getStaticPaths() {
  return [{ params: { id: 'package1' } }, { params: { id: 'package2' } }];
}

const { id } = Astro.params;
const packageName = (l as any)['price'][id ?? 'free'];
---

<Layout lang='vi' title=`${l.preorder.title} ${packageName}`>
  <Menu l={l} client:only='preact' />
  <Preorder1 l={l} id={id} />
  <Footer l={l} />
</Layout>
